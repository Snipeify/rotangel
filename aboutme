  <script>
    // Particle animation system
    const canvas = document.getElementById('particle-canvas');
    const ctx = canvas.getContext('2d');
    let dpr = window.devicePixelRatio || 1;
    let width = window.innerWidth;
    let height = window.innerHeight;
    let particles = [];
    const PARTICLE_COUNT = Math.max(70, Math.floor(window.innerWidth * 0.11));
    const COLORS = [
      "#88ccee", "#abd9f7", "#b8f0fc", "#e0f3ff", "#bcdbf5"
    ];

    function resizeCanvas() {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width * dpr;
      canvas.height = height * dpr;
      ctx.setTransform(1,0,0,1,0,0);
      ctx.scale(dpr, dpr);
    }
    window.addEventListener('resize', () => {
      resizeCanvas();
    });

    class Particle {
      constructor() {
        this.init();
      }
      init() {
        this.x = Math.random() * width;
        this.y = Math.random() * height;
        this.r = Math.random() * 2.5 + 1.0;
        this.color = COLORS[Math.floor(Math.random() * COLORS.length)];
        this.vel = (0.22 + Math.random() * 0.45) * (Math.random() < 0.5 ? 1 : -1);
        this.angle = Math.random() * Math.PI * 2;
        this.opacity = Math.random() * 0.35 + 0.45;
        this.drift = (Math.random() - 0.5) * 0.42;
        this.spin = (Math.random() - 0.5) * 0.012;
        this.t = Math.random() * Math.PI * 2;
      }
      update() {
        this.t += 0.01 + Math.random()*0.013;
        this.x += Math.cos(this.angle + this.t) * this.drift + Math.sin(this.angle) * (0.22 + Math.abs(this.drift) * 0.7);
        this.y += Math.sin(this.angle + this.spin) * this.vel + 0.18 + Math.cos(this.angle) * 0.03;
        this.x += Math.sin(this.angle + this.t / 2) * 0.07;
        this.y += Math.cos(this.angle + this.t / 3) * 0.06;
        // Wrap around
        if (this.x > width+10) this.x = -12;
        if (this.y > height+10) this.y = -12;
        if (this.x < -13) this.x = width+10;
        if (this.y < -13) this.y = height+10;
      }
      draw(ctx) {
        ctx.save();
        ctx.globalAlpha = this.opacity;
        const grad = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.r * (1.7 + 0.6*Math.sin(this.t)));
        grad.addColorStop(0, this.color);
        grad.addColorStop(1, "rgba(136,204,238,0)");
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.r * (1.6 + 0.24 * Math.sin(this.t)), 0, 2 * Math.PI);
        ctx.closePath();
        ctx.fillStyle = grad;
        ctx.shadowColor = this.color;
        ctx.shadowBlur = 9;
        ctx.fill();
        ctx.restore();
      }
    }

    function createParticles() {
      particles = [];
      for (let i = 0; i < PARTICLE_COUNT; i++) {
        particles.push(new Particle());
      }
    }

    function tick() {
      ctx.clearRect(0,0,width, height);
      for (let p of particles) {
        p.update();
        p.draw(ctx);
      }
      requestAnimationFrame(tick);
    }

    resizeCanvas();
    createParticles();
    tick();

    // Subtle interaction: add some mouse-based "wind" effect
    let mouse = {x: width/2, y: height/2};
    window.addEventListener('mousemove', (e) => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
    });

    setInterval(() => {
      for (let i = 0; i < 3; ++i) {
        let idx = Math.floor(Math.random() * particles.length);
        let p = particles[idx];
        let dx = (mouse.x - p.x);
        let dy = (mouse.y - p.y);
        let dist = Math.sqrt(dx*dx + dy*dy);
        if (dist < 180) {
          // push particle away gently
          p.x -= dx * 0.02 * Math.random();
          p.y -= dy * 0.02 * Math.random();
        }
      }
    }, 26);

    // Tabs logic
    const tabs = document.querySelectorAll('.tab');
    const panels = [document.getElementById('about-panel'), document.getElementById('songs-panel')];

    tabs.forEach((tab, idx) => {
      tab.addEventListener('click', ()=> {
        tabs.forEach(t2 => {
          t2.classList.remove('active');
          t2.setAttribute('aria-selected','false');
          t2.tabIndex = -1;
        });
        tab.classList.add('active');
        tab.setAttribute('aria-selected','true');
        tab.tabIndex = 0;
        panels.forEach(p=>p.style.display="none");
        panels[idx].style.display = "";
      });
    });

    // Keyboard navigation
    document.querySelector('.tabs').addEventListener('keydown', e => {
      if (e.key !== 'ArrowRight' && e.key !== 'ArrowLeft') return;
      let current = Array.from(tabs).findIndex(t=>t.classList.contains('active'));
      let next = (current + (e.key === 'ArrowRight' ? 1 : tabs.length - 1)) % tabs.length;
      tabs[next].focus();
      tabs[next].click();
    });

  </script>
</body>
</html>
